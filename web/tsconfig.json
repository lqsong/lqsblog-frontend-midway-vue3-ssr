{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "importHelpers": true,
    "isolatedModules": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "lib": ["esnext", "dom"],
    "types": [
      "vite/client"
    ],
    "paths": {
      "@/*": ["./*"],
      "~/*": ["../*"],
    }
  },
  "include": ["./@types","./**/*.ts", "./**/*.d.ts", "./**/*.tsx", "./**/*.vue"]
}